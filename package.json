{
  "name": "@julr/tooling-configs",
  "version": "1.0.0-beta.2",
  "private": true,
  "packageManager": "pnpm@7.0.0",
  "description": "ESLint config presets",
  "author": "Julien Ripouteau <julien@ripouteau.com>",
  "license": "ISC",
  "keywords": [],
  "scripts": {
    "lint": "eslint .",
    "release": "bumpp package.json packages/*/package.json packages/eslint-configs/*/package.json --commit \"chore(release): %s\" --push --tag && pnpm -r publish --access public"
  },
  "devDependencies": {
    "@julr/eslint-config": "workspace:*",
    "@julr/eslint-config-react": "workspace:*",
    "@julr/eslint-config-ts": "workspace:*",
    "@julr/eslint-config-vue": "workspace:*",
    "bumpp": "^9.2.0",
    "eslint": "^8.49.0",
    "typescript": "^5.2.2"
  },
  "eslintConfig": {
    "extends": [
      "@julr"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  }
}
