{
  "name": "@julr/eslint-config-monorepo",
  "version": "1.0.0-beta.0",
  "private": true,
  "packageManager": "pnpm@7.0.0",
  "description": "ESLint config presets",
  "author": "Julien Ripouteau <julien@ripouteau.com>",
  "license": "ISC",
  "keywords": [],
  "scripts": {
    "lint": "eslint .",
    "release": "bumpp package.json packages/*/package.json --commit \"chore(release): %s\" --push --tag && pnpm -r publish --access public"
  },
  "devDependencies": {
    "@julr/eslint-config": "workspace:*",
    "@julr/eslint-config-react": "workspace:*",
    "@julr/eslint-config-ts": "workspace:*",
    "@julr/eslint-config-vue": "workspace:*",
    "bumpp": "^8.2.1",
    "eslint": "^8.25.0",
    "typescript": "^4.8.4"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "typescript",
        "@babel/core",
        "prettier"
      ]
    }
  },
  "eslintConfig": {
    "extends": [
      "@julr"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  }
}
