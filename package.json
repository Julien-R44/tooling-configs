{
  "name": "@julr/eslint-config-monorepo",
  "version": "0.3.0",
  "private": true,
  "packageManager": "pnpm@7.0.0",
  "description": "ESLint config presets",
  "keywords": [],
  "license": "ISC",
  "author": "Julien Ripouteau <julien@ripouteau.com>",
  "scripts": {
    "lint": "eslint .",
    "release": "bumpp package.json packages/*/package.json --commit \"chore(release): %s\" --push --tag && pnpm -r publish --access public"
  },
  "devDependencies": {
    "@julr/eslint-config": "*",
    "bumpp": "^8.2.1",
    "eslint": "^8.20.0",
    "typescript": "^4.7.4"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "typescript"
      ]
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  }
}
